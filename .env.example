# API Configuration
PROJECT_NAME="RAG IT Assistant"
VERSION="1.0.0"
API_V1_STR="/api/v1"

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql://raguser:ragpassword@localhost:5432/rag_db

# RAG Configuration
PDF_PATH=data/raw/support_it_manual.pdf
CHROMA_PERSIST_DIR=data/vector_db/chroma
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# LLM Configuration
LLM_PROVIDER=huggingface
LLM_MODEL=google/flan-t5-base
LLM_TEMPERATURE=0.3
LLM_TOP_K=3

# Alternative: Google Gemini (uncomment to use)
# LLM_PROVIDER=gemini
# LLM_MODEL=gemini-pro
# GOOGLE_API_KEY=your-google-api-key

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000"]
